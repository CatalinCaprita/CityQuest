<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/col_bg_light"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/col_bg_border"
        android:background="@drawable/card_layout_rect"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_comapnion_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"

            android:background="@drawable/card_layout_rect"
            android:backgroundTint="@color/color_secondary"
            >

            <TextView
                android:id="@+id/tv_companion_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:fontFamily="@font/changa_medium"
                android:foregroundGravity="center"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/companion_name"
                android:textColor="@color/col_text_primary"
                android:textSize="24sp" />
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/container_hd_companions"
        android:backgroundTint="@color/col_bg_light"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"

        android:background="@drawable/card_layout_rect">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_quest_location"
            android:layout_width="177dp"
            android:layout_height="183dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_foreground"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:srcCompat="@drawable/ic_launcher_background"
            app:strokeColor="@color/color_secondary_light"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/tv_companion_attribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_quest_location"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:fontFamily="@font/changa_medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/companion_desc"
            android:textColor="@color/col_text_primary" />
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/grey_gradient_white"/>
    </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>