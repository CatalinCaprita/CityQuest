<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_primary"
    tools:context=".register.CredentialsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_subtask_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/changa"
        tools:text="Who was the first one to discover incredibly long question title in the museum's history?"
        android:textAlignment="center"
        android:textColor="@color/color_secondary"
        android:textSize="22sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_min_price"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tv_subtask_title"
        android:background="@color/color_primary"
        android:hint="Minimum Price"
        app:errorTextColor="@color/design_default_color_error"
        app:boxStrokeColor="@color/color_secondary_light"
        app:hintTextColor="@color/color_secondary_light"
        android:textColorHint="@color/color_secondary"
        app:placeholderTextColor="@color/color_secondary_light"
        app:boxStrokeWidth="1dp"
        app:endIconMode="clear_text"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            android:textAlignment="center"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_minus_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@id/tv_min_price"
        android:layout_alignParentStart="true"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_remove_24"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_plus_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_min_price"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_add_24"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_max_price"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tv_min_price"
        android:background="@color/color_primary"
        android:hint="Maximum Price"
        app:errorTextColor="@color/design_default_color_error"
        app:boxStrokeColor="@color/color_secondary_light"
        app:hintTextColor="@color/color_secondary_light"
        android:textColorHint="@color/color_secondary"
        app:placeholderTextColor="@color/color_secondary_light"
        app:boxStrokeWidth="1dp"
        app:endIconMode="clear_text"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            android:textAlignment="center"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_minus_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@id/tv_max_price"
        android:layout_alignParentStart="true"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_remove_24"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_plus_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_max_price"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_add_24"/>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_max_price"
        android:text="@string/action_confirm"
        android:backgroundTint="@color/color_secondary"
        android:fontFamily="@font/changa"
        android:visibility="visible"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:iconGravity="textEnd"
        app:strokeColor="@color/black"
        />


</RelativeLayout>