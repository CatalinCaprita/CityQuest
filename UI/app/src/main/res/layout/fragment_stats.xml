<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_bg"
    tools:context=".main.profile.StatsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/col_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_quest_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/col_bg_dark"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/col_bg_light">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_title_quest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/changa_medium"
                        android:text="@string/profile_header_quests_prog"
                        android:textColor="@color/col_text_primary"
                        android:textSize="20sp" />

                    <ProgressBar
                        android:id="@+id/pb_quests"

                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@id/tv_title_quest"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/date_info"
                        android:max="25"

                        android:progress="10"
                        android:progressDrawable="@drawable/progress_bar_drawable" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_quest_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/pb_quests"

                        android:layout_alignTop="@id/pb_quests"
                        android:layout_alignEnd="@id/pb_quests"
                        android:layout_alignBottom="@id/pb_quests"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/changa_medium"
                        android:paddingTop="-10dp"
                        android:text="@string/profile_quests_progress"
                        android:textAlignment="center"
                        android:textColor="@color/col_text_primary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_traveler_tratis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_quest_progress"
                android:layout_margin="5dp"
                android:backgroundTint="@color/col_bg_dark"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/col_bg_light">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_title_traveler_traits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/changa_medium"
                        android:text="@string/profile_header_traveler_traits"
                        android:textColor="@color/col_text_primary"
                        android:textSize="20sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_knowledge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/pb_knowledge"
                        android:layout_alignBottom="@id/pb_knowledge"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/changa_medium"
                        android:text="@string/label_progres_knowledge"
                        android:textColor="@color/col_text_primary"
                        android:textSize="15sp"
                        tools:text="Knowledge" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_knowledge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@id/tv_knowledge"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_baseline_help_24" />

                    <ProgressBar
                        android:id="@+id/pb_knowledge"

                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@id/tv_title_traveler_traits"
                        android:layout_alignStart="@id/tv_title_traveler_traits"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/date_info"
                        android:max="100"

                        android:progressDrawable="@drawable/progress_bar_drawable"
                        tools:progress="10" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_vitality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tv_knowledge"
                        android:layout_alignTop="@id/pb_vitality"
                        android:layout_alignBottom="@id/pb_vitality"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/changa_medium"
                        android:text="@string/label_progres_vitality"
                        android:textColor="@color/col_text_primary"
                        android:textSize="15sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_vitality"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@id/tv_vitality"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_baseline_help_24" />

                    <ProgressBar
                        android:id="@+id/pb_vitality"

                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@id/pb_knowledge"
                        android:layout_alignStart="@id/tv_title_traveler_traits"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/date_info"
                        android:max="100"

                        android:progressDrawable="@drawable/progress_bar_drawable"
                        tools:progress="10" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_swiftness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tv_knowledge"
                        android:layout_alignTop="@id/pb_swiftness"
                        android:layout_alignBottom="@id/pb_swiftness"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/changa_medium"
                        android:text="@string/label_progres_swiftness"
                        android:textColor="@color/col_text_primary"
                        android:textSize="15sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_swiftness"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@id/tv_swiftness"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_baseline_help_24" />

                    <ProgressBar
                        android:id="@+id/pb_swiftness"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@id/pb_vitality"
                        android:layout_alignStart="@id/tv_title_traveler_traits"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/date_info"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_bar_drawable"
                        tools:progress="10" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_sociability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tv_knowledge"
                        android:layout_alignTop="@id/pb_sociablity"
                        android:layout_alignBottom="@id/pb_sociablity"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/changa_medium"
                        android:text="@string/label_progres_sociability"
                        android:textColor="@color/col_text_primary"
                        android:textSize="15sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_sociability"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@id/tv_sociability"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_baseline_help_24" />

                    <ProgressBar
                        android:id="@+id/pb_sociablity"

                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@id/pb_swiftness"
                        android:layout_alignStart="@id/tv_title_traveler_traits"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/date_info"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_bar_drawable"
                        tools:progress="50" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_personality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_traveler_tratis"
                android:layout_margin="5dp"
                android:backgroundTint="@color/col_bg_dark"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/col_bg_light">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_title_personality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/changa_medium"
                        android:text="@string/profile_header_personality"
                        android:textColor="@color/col_text_primary"
                        android:textSize="20sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_personality"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@id/tv_title_personality"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_toEndOf="@id/tv_title_personality"
                        android:src="@drawable/ic_baseline_help_24" />

                    <com.github.mikephil.charting.charts.RadarChart
                        android:id="@+id/chart_personality"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_below="@id/tv_title_personality"
                        android:layout_margin="4dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"
                app:indicatorColor="@color/color_primary"
                tools:visibility="visible" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>