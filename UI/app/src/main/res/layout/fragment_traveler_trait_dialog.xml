<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    style="@style/Widget.Design.TextInputLayout"
    tools:context=".main.profile.TravelerTraitDialogFragment">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/changa_medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="Knowledge"
        android:textColor="@color/color_primary_light"
        android:textSize="28sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/changa_medium"
        android:textColor="@color/color_primary_light"
        android:textSize="18sp"
        tools:text="@string/profile_knowledge_description" />


</RelativeLayout>