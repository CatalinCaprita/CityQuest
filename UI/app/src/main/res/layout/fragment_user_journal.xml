<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    android:foregroundGravity="center"
    tools:context=".main.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/col_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/col_bg_border_dark"
                android:background="@drawable/card_layout_rect"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:id="@+id/layout_title"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_margin="1dp"
                    android:backgroundTint="@color/color_primary_light"
                    android:background="@drawable/card_layout_rect">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_journal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/travel_journal"
                        app:strokeColor="@color/color_primary_light"
                        app:strokeWidth="4dp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="false"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/changa_medium"
                        android:gravity="center|center_horizontal"
                        android:text="@string/title_user_journal"
                        android:textColor="@color/col_text_primary"
                        android:textSize="30sp"
                        android:textStyle="italic"
                        tools:layout_editor_absoluteX="103dp"
                        tools:layout_editor_absoluteY="250dp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:elevation="8dp"
                android:src="@drawable/ic_launcher_foreground"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                app:srcCompat="@drawable/sunrise"
                app:strokeColor="@color/color_secondary_light"
                app:strokeWidth="2dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_companions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_profile_pic"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp"
                android:backgroundTint="@color/col_bg_border_dark"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/col_bg_border"
                    android:background="@drawable/card_layout_rect">
                    <LinearLayout
                        android:id="@+id/container_hd_companions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="1dp"
                        android:backgroundTint="@color/color_primary_light"
                        android:background="@drawable/card_layout_rect">

                    <TextView
                            android:id="@+id/tv_hd_companion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/changa_medium"
                            android:text="@string/hd_journey_begin"
                            android:textColor="@color/col_text_primary"
                            android:textDirection="firstStrongRtl"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_hd_companion2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/changa_medium"
                            android:text="@string/hd_companion_gather"
                            android:textColor="@color/col_text_primary"
                            android:textSize="18sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_companions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/container_hd_companions"
                        android:layout_alignStart="@id/container_hd_companions"
                        android:layout_alignEnd="@id/container_hd_companions"

                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"

                        android:layout_marginBottom="1dp"
                        android:background="@color/col_bg_light"
                        android:backgroundTint="@color/col_bg_light"
                        android:paddingTop="5dp"
                        android:scrollbars="vertical"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/cv_item_companion"
                        tools:orientation="horizontal" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_day1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_companions"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp"
                android:backgroundTint="@color/col_bg_border_dark"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/card_layout_rect"
                    android:backgroundTint="@color/col_bg_border">

                    <LinearLayout
                        android:id="@+id/container_hd_day1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@drawable/card_layout_rect"
                        android:backgroundTint="@color/color_primary_light"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_day1_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/changa_medium"
                            android:text="@string/hd_day1"
                            android:textColor="@color/col_text_primary"
                            android:textDirection="firstStrongRtl"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_day1_heading2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/changa_medium"
                            android:text="@string/shd_day_high"
                            android:textColor="@color/col_text_primary"
                            android:textDirection="firstStrongRtl"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_day1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_hd_day1"
                        android:layout_alignStart="@id/container_hd_day1"
                        android:layout_alignEnd="@id/container_hd_day1"
                        android:layout_marginStart="1dp"

                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"

                        android:background="@color/col_bg_light"
                        android:backgroundTint="@color/col_bg_light"
                        android:paddingTop="5dp"
                        android:scrollbars="vertical"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/cv_item_quest_brief"
                        tools:orientation="horizontal" />


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_day2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_day1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp"
                android:backgroundTint="@color/col_bg_border_dark"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/card_layout_rect"
                    android:backgroundTint="@color/col_bg_border">

                    <LinearLayout
                        android:id="@+id/container_hd_day2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@drawable/card_layout_rect"
                        android:backgroundTint="@color/color_primary_light"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_day2_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/changa_medium"
                            android:text="@string/hd_day2"
                            android:textColor="@color/col_text_primary"
                            android:textDirection="firstStrongRtl"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_day2_heading2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/changa_medium"
                            android:textColor="@color/col_text_primary"
                            android:textDirection="firstStrongRtl"
                            android:textSize="18sp"
                            tools:text="@string/shd_day_medium" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_day2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_hd_day2"
                        android:layout_alignStart="@id/container_hd_day2"
                        android:layout_alignEnd="@id/container_hd_day2"
                        android:layout_marginStart="1dp"

                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"

                        android:background="@color/col_bg_light"
                        android:backgroundTint="@color/col_bg_light"
                        android:paddingTop="5dp"
                        android:scrollbars="vertical"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/cv_item_companion"
                        tools:orientation="horizontal" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_day3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_day2"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp"
                android:backgroundTint="@color/col_bg_border_dark"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/card_layout_rect"
                    android:backgroundTint="@color/col_bg_border">

                    <LinearLayout
                        android:id="@+id/container_hd_day3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@drawable/card_layout_rect"
                        android:backgroundTint="@color/color_primary_light"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_day3_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/changa_medium"
                            android:text="@string/hd_day3"
                            android:textColor="@color/col_text_primary"
                            android:textDirection="firstStrongRtl"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_day3_heading2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/changa_medium"
                            android:textColor="@color/col_text_primary"
                            android:textDirection="firstStrongRtl"
                            android:textSize="18sp"
                            tools:text="@string/shd_day_low" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_day3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_hd_day3"
                        android:layout_alignStart="@id/container_hd_day3"
                        android:layout_alignEnd="@id/container_hd_day3"
                        android:layout_marginStart="1dp"

                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"

                        android:background="@color/col_bg"
                        android:backgroundTint="@color/col_bg_light"
                        android:paddingTop="5dp"
                        android:scrollbars="vertical"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/cv_item_companion"
                        tools:orientation="horizontal" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true" />

</RelativeLayout>