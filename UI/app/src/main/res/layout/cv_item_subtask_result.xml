<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/color_secondary"
    app:cardElevation="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/card_layout_rect"
        android:backgroundTint="@color/color_secondary">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_correct_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_subtask_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:background="@color/color_primary"
            android:fontFamily="@font/changa_medium"
            android:text="@string/correct_answer_was"
            android:textColor="@color/col_text_primary"
            android:textSize="18sp" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_subtask_title"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="0dp"
            android:background="@color/color_primary"
            android:fontFamily="@font/changa_medium"
            android:textColor="@color/col_text_primary"
            android:textSize="18sp"
            android:textAlignment="center"
            android:paddingTop="20dp"
            tools:text="Who was the first ruler of Romanina also known as the diner of the Craiova?" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_content_correct_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_correct_answer"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/color_primary"
            android:fontFamily="@font/changa_medium"

            android:textColor="@color/color_accent"
            android:textSize="18sp"
            tools:text="123.  It's always the first answer dummy" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_user_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content_correct_answer"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/color_primary"
            android:fontFamily="@font/changa_medium"

            android:text="@string/user_answer_was"
            android:textColor="@color/col_text_primary"
            android:textSize="18sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_content_user_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_user_answer"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"

            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/card_layout_rect"
            android:backgroundTint="@color/color_primary"
            android:fontFamily="@font/changa_medium"
            android:textColor="@color/color_accent"
            android:textSize="18sp"
            tools:text="@string/user_answer_nothing" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>